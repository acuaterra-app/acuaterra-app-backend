{
  "/api/v2/admin/modules/{moduleId}/measurements": {
    "get": {
      "tags": ["Admin/Modules"],
      "summary": "Get measurements from a module for graphical reports",
      "description": "Specialized endpoint for the reporting system that provides:\n\n1. Raw measurement data\n2. Processed and grouped data for charts (by day, week, or month)\n3. General statistics\n\nThe chart data includes average, minimum, and maximum values per period.",
      "parameters": [
        {
          "name": "moduleId",
          "in": "path",
          "description": "Module ID",
          "required": true,
          "schema": {
            "type": "integer",
            "minimum": 1
          }
        },
        {
          "name": "startDate",
          "in": "query",
          "description": "Start date (YYYY-MM-DD)",
          "schema": {
            "type": "string",
            "format": "date",
            "example": "2025-01-01"
          }
        },
        {
          "name": "endDate",
          "in": "query",
          "description": "End date (YYYY-MM-DD)",
          "schema": {
            "type": "string",
            "format": "date",
            "example": "2025-04-27"
          }
        },
        {
          "name": "period",
          "in": "query",
          "description": "Grouping period:\n- daily: Shows data by day (2025-04-27)\n- weekly: Groups by week (Week of 2025-04-22)\n- monthly: Groups by month (April 2025)",
          "schema": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly"],
            "default": "daily"
          }
        },
        {
          "name": "sensorType",
          "in": "query",
          "description": "Filter by sensor type",
          "schema": {
            "type": "string",
            "enum": ["Temperature", "Proximity"]
          }
        },
        {
          "name": "limit",
          "in": "query",
          "description": "Limit of raw measurements",
          "schema": {
            "type": "integer",
            "default": 100,
            "minimum": 1,
            "maximum": 500
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Measurements successfully retrieved",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Measurements retrieved successfully"
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                      "rawData": {
                        "type": "array",
                        "description": "Unprocessed measurements",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer",
                              "example": 123
                            },
                            "value": {
                              "type": "number",
                              "example": 25.7
                            },
                            "date": {
                              "type": "string",
                              "example": "2025-04-26"
                            },
                            "time": {
                              "type": "string",
                              "example": "14:30:22"
                            },
                            "sensor": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "integer",
                                  "example": 3
                                },
                                "name": {
                                  "type": "string",
                                  "example": "Sensor Temperature 45"
                                },
                                "type": {
                                  "type": "string",
                                  "example": "Temperature"
                                }
                              }
                            }
                          }
                        }
                      },
                      "chartData": {
                        "type": "object",
                        "description": "Data formatted for charts with grouping by period",
                        "properties": {
                          "labels": {
                            "type": "array",
                            "description": "Labels according to the selected period",
                            "example": [
                              "daily: 2025-04-01",
                              "weekly: Week of 2025-04-01",
                              "monthly: April 2025"
                            ]
                          },
                          "datasets": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "label": {
                                  "type": "string",
                                  "example": "Sensor Temperature 45 (Temperature)"
                                },
                                "data": {
                                  "type": "array",
                                  "description": "Average values by period",
                                  "example": [23.5, 24.2, 25.7]
                                },
                                "minValues": {
                                  "type": "array",
                                  "description": "Minimum values by period",
                                  "example": [22.1, 23.0, 24.5]
                                },
                                "maxValues": {
                                  "type": "array",
                                  "description": "Maximum values by period",
                                  "example": [25.3, 26.1, 26.8]
                                }
                              }
                            }
                          }
                        }
                      },
                      "stats": {
                        "type": "object",
                        "description": "General statistics of all measurements",
                        "properties": {
                          "count": {
                            "type": "integer",
                            "description": "Total number of measurements",
                            "example": 120
                          },
                          "minValue": {
                            "type": "number",
                            "description": "Overall minimum value",
                            "example": 21.2
                          },
                          "maxValue": {
                            "type": "number",
                            "description": "Overall maximum value",
                            "example": 28.4
                          },
                          "avgValue": {
                            "type": "number",
                            "description": "Overall average",
                            "example": 24.6
                          }
                        }
                      }
                    }
                    },
                    "example": [{
                      "rawData": [
                        {
                          "id": 123,
                          "value": 25.7,
                          "date": "2025-04-26",
                          "time": "14:30:22",
                          "sensor": {
                            "id": 3,
                            "name": "Sensor Temperature 45",
                            "type": "Temperature"
                          }
                        }
                      ],
                      "chartData": {
                        "labels": ["2025-04-26"],
                        "datasets": [
                          {
                            "label": "Sensor Temperature 45 (Temperature)",
                            "data": [25.7],
                            "minValues": [25.7],
                            "maxValues": [25.7]
                          }
                        ]
                      },
                      "stats": {
                        "count": 1,
                        "minValue": 25.7,
                        "maxValue": 25.7,
                        "avgValue": 25.7
                      }
                    }]
                  },
                  "errors": {
                    "type": "array",
                    "items": {},
                    "example": []
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Error in request parameters",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Request error"
                  },
                  "data": {
                    "type": "array",
                    "example": []
                  },
                  "errors": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "msg": {
                          "type": "string",
                          "example": "Start date must have a valid format"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "401": {
          "description": "Unauthorized - Missing or invalid credentials"
        },
        "403": {
          "description": "Forbidden - User does not have administrator privileges"
        },
        "404": {
          "description": "Module not found or has no active sensors"
        },
        "500": {
          "description": "Internal server error",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Error retrieving measurements"
                  },
                  "data": {
                    "type": "array",
                    "example": []
                  },
                  "errors": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "msg": {
                          "type": "string",
                          "example": "Internal server error"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "security": [
        {
          "apiKey": []
        }
      ]
    }
  }
}