                  },
                  "data": {
                    "type": "array",
                    "example": []
                  },
                  "errors": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "msg": {
                          "type": "string",
                          "example": "Field validation failed"
                        },
                        "param": {
                          "type": "string"
                        },
                        "location": {
                          "type": "string"
                        }
                      }
                    },
                    "example": [
                      {
                        "msg": "Email must be a valid email address",
                        "param": "email",
                        "location": "body"
                      }
                    ]
                  },
                  "meta": {
                    "type": "object",
                    "example": {}
                  }
                }
