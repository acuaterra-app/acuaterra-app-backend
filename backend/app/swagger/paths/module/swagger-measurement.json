                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2024-03-25T19:30:00.000Z"
                        },
                        "updatedAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2024-03-25T19:30:00.000Z"
                        },
                        "thresholdInfo": {
                          "type": "object",
                          "properties": {
                            "threshold": {
                              "type": "number",
                              "format": "decimal",
                              "example": 30.0
                            },
                            "condition": {
                              "type": "string",
                              "example": "greater_than"
                            },
                            "message": {
                              "type": "string",
                              "example": "Temperature exceeds threshold"
                            }
                          }
                        }
                      }
                    }
                  },
                  "errors": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    },
                    "example": []
                  }
                }
              }
            }
          }
        },
