    "get": {
      "tags": ["Module/Measurements"],
      "summary": "Get measurements list",
      "description": "Retrieves measurements for the authenticated user's module sensors, ordered by date and time in descending order (newest first).\n\n## Required Authentication\n- Requires a valid JWT token\n- User must have OWNER or MONITOR role\n- Retrieves measurements from modules created by or assigned to the user\n\n## Optional Query Parameters\n- sensorId: Optional. Filters measurements for a specific sensor by ID",
      "operationId": "getMeasurements",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "parameters": [
        {
          "name": "sensorId",
          "in": "query",
          "required": false,
          "schema": {
            "type": "integer"
          },
          "description": "ID of the specific sensor to retrieve measurements for. If not provided, returns measurements from all sensors associated with the module."
        }
      ],
      "responses": {
        "200": {
          "description": "Measurements retrieved successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Measurements retrieved successfully"
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "id_sensor": {
                          "type": "integer",
                          "example": 3
                        },
                        "value": {
                          "type": "number",
                          "format": "decimal",
                          "example": 7.5
                        },
                        "date": {
                          "type": "string",
                          "format": "date",
                          "example": "2025-03-25"
                        },
                        "time": {
                          "type": "string",
                          "format": "time",
                          "example": "16:53"
                        },
                        "sensor": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer",
                              "example": 3
                            },
                            "name": {
                              "type": "string",
                              "example": "Temperature Sensor"
                            },
                            "type": {
                              "type": "string",
                              "example": "temperature"
                            },
                            "moduleId": {
                              "type": "integer",
                              "example": 1
                            }
                          }
                        }
                      }
                    }
                  },
                  "errors": {
