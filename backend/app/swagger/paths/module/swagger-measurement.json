{
  "/api/v2/module/measurement": {
    "post": {
      "tags": ["Module/Measurements"],
      "summary": "Create a new measurement",
      "description": "Creates a new measurement for a module's sensor.\n\n## Required Authentication\n- Requires a valid JWT token\n- User must have MODULE role\n- User must be associated with a valid module\n\n## Request Body Fields\n\n### Required Fields\n- type: Sensor type\n  - Type: String\n  - Purpose: Identifies the type of sensor in the module\n\n- value: Measurement value\n  - Type: Decimal (10,2)\n  - Purpose: The actual measurement reading from the sensor\n\n- date: Measurement date\n  - Type: String\n  - Format: YYYY-MM-DD\n  - Purpose: Date when the measurement was taken\n\n- time: Measurement time\n  - Type: String\n  - Format: HH:mm\n  - Purpose: Time when the measurement was taken",
      "operationId": "createMeasurement",
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "description": "Measurement data that needs to be created",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": ["type", "value", "date", "time"],
              "properties": {
                "type": {
                  "type": "string",
                  "description": "Type of sensor",
                  "example": "temperature"
                },
                "value": {
                  "type": "number",
                  "format": "decimal",
                  "description": "Measurement value",
                  "example": 25.5
                },
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date of measurement",
                  "example": "2024-03-25"
                },
                "time": {
                  "type": "string",
                  "format": "time",
                  "description": "Time of measurement",
                  "example": "14:30"
                }
              }
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Measurement created successfully",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Measurement created successfully"
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "id_sensor": {
                          "type": "integer",
                          "example": 1
                        },
                        "value": {
                          "type": "number",
                          "format": "decimal",
                          "example": 25.5
                        },
                        "date": {
                          "type": "string",
                          "format": "date",
                          "example": "2024-03-25"
                        },
                        "time": {
                          "type": "string",
                          "format": "time",
                          "example": "14:30"
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2024-03-25T19:30:00.000Z"
                        },
                        "updatedAt": {
                          "type": "string",
                          "format": "date-time",
                          "example": "2024-03-25T19:30:00.000Z"
                        }
                      }
                    }
                  },
                  "errors": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    },
                    "example": []
                  }
                }
              }
            }
          }
        },
        "202": {
          "description": "Measurement created successfully with alert generated",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Measurement created successfully with alert"
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "id_sensor": {
                          "type": "integer",
                          "example": 1
                        },
                        "value": {
                          "type": "number",
                          "format": "decimal",
                          "example": 25.5
                        },
                        "date": {
                          "type": "string",
